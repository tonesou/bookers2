<div>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
    <tr></tr>
    <tr>
      <th>name</th>
      <th><h3><%= @user.name %></h3></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
  <div class="row"></div>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>
  <% end %>
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %>
    <br><%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
  <% end %>
</div>
<div class="col-md-8 offset-md-1">

<h2>Books</h2>
<table class="table">
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
      <%= link_to user_path(@user.id) do %>
      <%= image_tag @user.get_profile_image(100,100) %>
      <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
  </div>
    </div>