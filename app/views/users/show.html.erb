<div>
  <h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><h3><%= @user.name %></h3></th>
    </tr>
    <tr>
      <th>introduction</th>
    </tr>
  </table>
  <% if @user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>
  <% end %>
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :shop_name %>
    <p>Opinion</p>
      <%= f.text_area :caption %>
    <br><%= f.submit 'Create Book' %>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->


<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
      <%= link_to user_path(@user.id) do %>
      <%= image_tag @user.get_profile_image(100,100) %>
      <% end %>
      </td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
</table>

<% end %>