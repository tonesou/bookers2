   </tbody>
 </table>

 <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block edit_user_11216" do %>
 <div class="fas fa-user-cog fa-w-20"></div>
 <% end %>
<h2>New book</h2>
 <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
