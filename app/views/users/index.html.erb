<h2>User info</h2>
 <%= image_tag @user.get_profile_image(100,100) %>
 <table>
   <tr></tr>
   <tr>
     <th>name</th>
     <th><%= @user.name %></th>
   </tr>
   <tr>
     <th>introduction</th>
   </tr>
 </table>

 <%= link_to "プロフィール編集", edit_user_path(current_user) %>

 <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
  <h2>Users</h2>

  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
    <tbody>
      <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    </tbody>
  </table>
<% end %>