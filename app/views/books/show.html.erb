<% if flash[:notice] %>
      <div id="notice">
        <font color="green"><%= flash[:notice] %></font>
      </div>
    <% end %>
<h2>User info</h2>
 <%= image_tag @user.get_profile_image(100,100) %>
 <table>
   <tr></tr>
   <tr>
     <th>name</th>
     <th><%= @user.name %></th>
   </tr>
   <tr>
     <th>introduction</th>
   </tr>
 </table>
  <%= link_to "プロフィール編集", edit_user_path(current_user) %>


<%= form_with model: @book_new do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
 <% end %>

 <h1>Book detail</h1>
  <% @books.each do |book| %>
    <%= link_to user_path(book.user.id) do %>
    <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
  <% end %>
<p><%= @book.user.name %></p>
<p>Title：<%= @book.title %></p>
<p>Opinion：<%= @book.body %></p>
<% if @book.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book) %>
  <%= link_to "destroy", book_path(@book), method: :delete %>
<% end %>