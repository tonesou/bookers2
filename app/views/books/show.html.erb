<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
<h2>User info</h2>
 <%= image_tag @user.get_profile_image(100,100) %>
 <table class="table">
   <tbody>
   <tr></tr>
   <tr>
     <th>name</th>
     <th><%= @user.name %></th>
   </tr>
   <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
   </tr>
   </tbody>
 </table>
 <div class="row"></div>

 <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block edit_user_11216" do %>
 <i class="fa fa-user-cog fa-w-20"></i>
 <% end %>

<h2>New book</h2>
<%= form_with model: @book_new do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
 <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
 <h1>Book detail</h1>
 <table class="table">
   <tbody>
   <tr>
     <td><%= link_to user_path(@book.user.id) do %>
    <%= image_tag @book.user.get_profile_image(100,100) %>
  <% end %><br>
  <%= link_to @book.user.name, user_path(@book.user.id) %></td>
  <td><%= link_to @book.title, book_path(@book.id) %></td>
  <td><%= @book.body %></td>
  <td>
    <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book),class: "btn btn-sm btn-success edit_book_8242" %>
    <% end %>
  </td>
  <td>
    <% if @book.user == current_user %>
    <%= link_to "Destroy", book_path, method: :delete, class: "btn btn-sm btn-danger destroy_book_8242" %>
    <% end %>
  </td>
   </tr>
   </tbody>
 </table>
  </div>
  </div>
  </div>