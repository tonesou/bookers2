<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
　　<% end %>
  </ul>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
 <h2>User info</h2>
 <%= image_tag @user.get_profile_image(100,100) %>
 <table class="table">
   <tbody>
   <tr>
     <th>name</th>
     <th><%= @user.name %></th>
   </tr>
   <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
   </tr>
   </tbody>
 </table>

 <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
 <i class="fas fa-user-cog fa-w-20"></i>
 <% end %>
 <h2>New book</h2>
 <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title, class: "form-control" %>
    <p>Opinion</p>
      <%= f.text_area :body, class: "form-control" %><br>
    <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
  <% end %>
  </div>
  <div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table">
    <thead>
      <tr>
        <th></th>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
    </thead>
<% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
          </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
    </table>
  </div>
  </div>
  </div>