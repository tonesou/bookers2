<% if flash[:notice] %>
      <div id="notice">
        <font color="green"><%= flash[:notice] %></font>
      </div>
    <% end %>
 <h2>User info</h2>
 <%= image_tag @user.get_profile_image(100,100) %>
 <table>
   <tr></tr>
   <tr>
     <th>name</th>
     <th><%= @user.name %></th>
   </tr>
   <tr>
     <th>introduction</th>
   </tr>
 </table>
  <%= link_to "プロフィール編集", edit_user_path(current_user) %>

 <%= form_with model: @book do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %><br>
    <%= f.submit 'Create Book' %>
  <% end %>
<h2>Books</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<table>
    <thead>
      <tr>
        <th></th>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
    </thead>
<% @books.each do |book| %>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
          <%= image_tag book.user.get_profile_image(100,100) %>
          <% end %>
          </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    </tbody>
  </table>
  <% end %>